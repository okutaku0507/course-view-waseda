<% @page_title = "会員名簿" %>

<h1><%= @page_title %></h1>
<p><%= link_to "ユーザー新規登録", :new_admin_member %></p>
<%= form_tag :search_members, method: :get do %>
<p><%= text_field_tag "q", params[:q] %>
<%= submit_tag "検索" %></p>
<% end %>
  <% if flash.notice %>
    <p class="info_notice"><%= flash.notice %></p>
  <% end %>
<% if @members.present? %>
<table>
  <tr>
    <th>名前</th>
    <th>学部</th>
    <th>学科</th>
    <th>性別</th>
  </tr>
  <% @members.each do |member| %>
  <tr>
    <td><%= link_to member.family_name + member.first_name, [:admin, member]%></td>
    <td><%= member.faculty %></td>
    <td><%= member.subject %></td>
    <td><%= member.gender == 0 ? "男" : "女" %></td>
  </tr>
  <% end %>
</table>

<% else %>
<p>会員情報がありません。</p>
<% end %>
