
<% @page_title = "ユーザーの詳細" %>

<h1 id="title"><%= @page_title %></h1>

<table class="user">
<tr>
<th class="label">本名</th>
<td class="detail"><%= @member.family_name %>&nbsp;&nbsp;<%= @member.first_name %></td>
</tr>
<tr>
<th class="label">メールアドレス(ID)</th>
<td class="detail"><%= @member.email %></td>
</tr>

<tr>
<th class="label">在学・卒業学部</th>
<td class="detail"><%= @member.faculty %></td>
</tr>

<tr>
<th class="label">学科</th>
<td class="detail"><%= @member.subject %></td>
</tr>

<tr>
<th class="label">性別</th>
<td class="detail"><%= @member.gender == 0 ? "男" : "女" %></td>
</tr>
<% if @current_member == @member || @current_member.try(:administrator?) %>
<tr>
<td class="edit" colspan=2><p class="edit"><%= link_to "パスワードの変更", [:edit, @member] %>&nbsp;&nbsp;|&nbsp;&nbsp;
                                 <%= link_to "アカウントの削除", @member, method: :delete, confirm: "本当に削除しますか？もう元には戻せませんよ・・・？"%></p></td>
</tr>
<% end %>
</table>
