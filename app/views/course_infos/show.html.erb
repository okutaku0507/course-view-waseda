         <p id="take_button" data-num="<%= @course_info.id %>">
           <a href="#">履修!</a>
         </p>
         <input id="guest_view_add_button" type="button" value="加筆!" />
    </div>

<% end %>
</div>
</div>
<% end %>
<% if @current_member %>
  <%= render "courseinfoview" %>
<% else %>
  <%= render "courseinfoview_before_login" %>
<% end %>
</div>

